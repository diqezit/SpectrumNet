    </ControlTemplate>

    <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Template" Value="{StaticResource DangerButtonTemplate}"/>
    </Style>

</ResourceDictionary>
