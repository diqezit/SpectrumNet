<Window x:Class="SpectrumNet.ControlPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SpectrumNet"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="Control Panel"
        Height="300"
        Width="800"
        WindowStartupLocation="CenterOwner"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="CanResize"
        BorderBrush="{DynamicResource WindowBorderBrush}">

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="30"
                            CornerRadius="0"
                            GlassFrameThickness="0"
                            ResizeBorderThickness="6"/>
    </shell:WindowChrome.WindowChrome>

    <Window.Resources>
        <Duration x:Key="StandardAnimationDuration">0:0:0.3</Duration>
        <CubicEase x:Key="StandardEaseOut"
                   EasingMode="EaseOut"/>
    </Window.Resources>

    <Border Background="{DynamicResource WindowBackgroundBrush}"
            BorderBrush="{DynamicResource WindowBorderBrush}"
            BorderThickness="1"
            CornerRadius="12">
        <Grid>
            <Border x:Name="TitleBar"
                    Height="30"
                    VerticalAlignment="Top"
                    Background="{DynamicResource TitleBarBackgroundBrush}"
                    CornerRadius="12,12,0,0"
                    MouseLeftButtonDown="OnTitleBarMouseLeftButtonDown">
                <TextBlock Text="Control Panel"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"/>
            </Border>

            <Border x:Name="ControlPanel"
                    Background="{DynamicResource SurfaceBrush}"
                    CornerRadius="0,0,12,12"
                    Padding="15"
                    Margin="0,30,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,20">
                        <Button x:Name="StartCaptureButton"
                                Style="{DynamicResource ModernButtonStyle}"
                                Width="130"
                                Height="40"
                                Margin="0,0,10,0"
                                IsEnabled="{Binding CanStartCapture}"
                                Click="OnButtonClick">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="▶"
                                           FontSize="16"
                                           Margin="0,0,8,0"/>
                                <TextBlock Text="Start"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="StopCaptureButton"
                                Style="{DynamicResource ModernButtonStyle}"
                                Width="130"
                                Height="40"
                                Margin="0,0,10,0"
                                IsEnabled="{Binding IsRecording}"
                                Click="OnButtonClick">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⏹"
                                           FontSize="16"
                                           Margin="0,0,8,0"/>
                                <TextBlock Text="Stop"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="OverlayButton"
                                Style="{DynamicResource ModernButtonStyle}"
                                Width="130"
                                Height="40"
                                Margin="0,0,10,0"
                                Click="OnButtonClick">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚡"
                                           FontSize="16"
                                           Margin="0,0,8,0"/>
                                <TextBlock Text="Overlay"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="OpenSettingsButton"
                                Style="{DynamicResource ModernButtonStyle}"
                                Width="130"
                                Height="40"
                                Margin="0,0,10,0"
                                Click="OnButtonClick">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚙"
                                           FontSize="16"
                                           Margin="0,0,8,0"/>
                                <TextBlock Text="Settings"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="OpenPopupButton"
                                Style="{DynamicResource ModernButtonStyle}"
                                Width="130"
                                Height="40"
                                Click="OnButtonClick">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔧"
                                           FontSize="16"
                                           Margin="0,0,8,0"/>
                                <TextBlock Text="Gain Control"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0"
                                Background="{DynamicResource ControlsPanelBackgroundBrush}"
                                CornerRadius="8"
                                Padding="15"
                                Margin="0,0,15,0">
                            <StackPanel>
                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="40"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="Interval:"
                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                               Margin="0,0,10,0"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"/>
                                    <Slider Grid.Column="1"
                                            x:Name="barSpacingSlider"
                                            Style="{DynamicResource ModernSliderStyle}"
                                            Height="20"
                                            Minimum="1"
                                            Maximum="15"
                                            Value="{Binding BarSpacing, Mode=TwoWay}"
                                            VerticalAlignment="Center"
                                            ValueChanged="OnSliderValueChanged"/>
                                    <TextBlock Grid.Column="2"
                                               Text="{Binding BarSpacing, StringFormat='{}{0:F0}'}"
                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Grid>

                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="40"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="Number of strips:"
                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                               Margin="0,0,10,0"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"/>
                                    <Slider Grid.Column="1"
                                            x:Name="barCountSlider"
                                            Style="{DynamicResource ModernSliderStyle}"
                                            Height="20"
                                            Minimum="10"
                                            Maximum="500"
                                            Value="{Binding BarCount, Mode=TwoWay}"
                                            VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2"
                                               Text="{Binding BarCount, StringFormat='{}{0:F0}'}"
                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Grid>

                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="40"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="Render quality:"
                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                               Margin="0,0,10,0"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"/>
                                    <ComboBox Grid.Column="1"
                                              x:Name="RenderQualityComboBox"
                                              Style="{StaticResource ModernComboBoxStyle}"
                                              Height="24"
                                              ItemsSource="{Binding AvailableRenderQualities}"
                                              SelectedItem="{Binding RenderQuality, Mode=TwoWay}"
                                              VerticalAlignment="Center"
                                              SelectionChanged="OnComboBoxSelectionChanged"/>
                                    <TextBlock Grid.Column="2"
                                               Visibility="Hidden"/>
                                </Grid>

                                <Grid Margin="0,8,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="40"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="Overlay mode:"
                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                               Margin="0,0,10,0"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"/>
                                    <CheckBox Grid.Column="1"
                                              Style="{DynamicResource ModernCheckBoxStyle}"
                                              Content="Always on top"
                                              IsChecked="{Binding IsOverlayTopmost, Mode=TwoWay}"
                                              VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2"
                                               Visibility="Hidden"/>
                                </Grid>

                                <Grid Margin="0,8,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="40"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="Performance Info:"
                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                               Margin="0,0,10,0"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"/>
                                    <CheckBox Grid.Column="1"
                                              Style="{DynamicResource ModernCheckBoxStyle}"
                                              Content="Show FPS"
                                              IsChecked="{Binding ShowPerformanceInfo, Mode=TwoWay}"
                                              VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2"
                                               Visibility="Hidden"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1"
                                Background="{DynamicResource ControlsPanelBackgroundBrush}"
                                CornerRadius="8"
                                Padding="15">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="40"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="90"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0"
                                           Grid.Column="0"
                                           Text="Renderer:"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,10,0"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"/>
                                <ComboBox Grid.Row="0"
                                          Grid.Column="1"
                                          x:Name="RenderStyleComboBox"
                                          Style="{DynamicResource ModernComboBoxStyle}"
                                          Width="200"
                                          HorizontalAlignment="Left"
                                          VerticalAlignment="Center"
                                          ItemsSource="{Binding AvailableDrawingTypes}"
                                          SelectedItem="{Binding SelectedDrawingType, Mode=TwoWay}"
                                          SelectionChanged="OnComboBoxSelectionChanged"/>

                                <TextBlock Grid.Row="1"
                                           Grid.Column="0"
                                           Text="Paint:"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,10,0"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"/>
                                <ComboBox Grid.Row="1"
                                          Grid.Column="1"
                                          x:Name="StyleComboBox"
                                          Style="{DynamicResource ModernComboBoxStyle}"
                                          Width="200"
                                          HorizontalAlignment="Left"
                                          VerticalAlignment="Center"
                                          ItemsSource="{Binding AvailablePalettes.Keys}"
                                          SelectedItem="{Binding SelectedStyle, Mode=TwoWay}"
                                          SelectionChanged="OnComboBoxSelectionChanged">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal"
                                                        VerticalAlignment="Center">
                                                <Rectangle Width="16"
                                                           Height="16"
                                                           Margin="0,0,5,0"
                                                           Stroke="Black"
                                                           StrokeThickness="1"
                                                           Fill="{Binding Converter={StaticResource PaletteNameToBrushConverter}}"/>
                                                <TextBlock Text="{Binding}"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>

                                <TextBlock Grid.Row="2"
                                           Grid.Column="0"
                                           Text="Window FFT:"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,10,0"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"/>
                                <ComboBox Grid.Row="2"
                                          Grid.Column="1"
                                          x:Name="FftWindowTypeComboBox"
                                          Style="{DynamicResource ModernComboBoxStyle}"
                                          Width="200"
                                          HorizontalAlignment="Left"
                                          VerticalAlignment="Center"
                                          ItemsSource="{Binding AvailableFftWindowTypes}"
                                          SelectedItem="{Binding WindowType, Mode=TwoWay}"
                                          SelectionChanged="OnComboBoxSelectionChanged"/>

                                <TextBlock Grid.Row="3"
                                           Grid.Column="0"
                                           Text="Scale Type:"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,10,0"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"/>
                                <ComboBox Grid.Row="3"
                                          Grid.Column="1"
                                          x:Name="ScaleTypeComboBox"
                                          Style="{DynamicResource ModernComboBoxStyle}"
                                          Width="200"
                                          HorizontalAlignment="Left"
                                          VerticalAlignment="Center"
                                          ItemsSource="{Binding AvailableScaleTypes}"
                                          SelectedItem="{Binding ScaleType, Mode=TwoWay}"
                                          SelectionChanged="OnComboBoxSelectionChanged"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </Border>

            <Popup x:Name="GainControlsPopup"
                   Placement="Center"
                   StaysOpen="False"
                   AllowsTransparency="True"
                   IsOpen="{Binding IsPopupOpen, Mode=TwoWay}">
                <Border Background="{DynamicResource DarkSurfaceBrush}"
                        BorderBrush="{DynamicResource DarkPopupBorderBrush}"
                        BorderThickness="1"
                        CornerRadius="16"
                        Padding="24"
                        Width="400"
                        RenderTransformOrigin="0.5,0.5">
                    <Border.RenderTransform>
                        <ScaleTransform ScaleX="0.7"
                                        ScaleY="0.7"/>
                    </Border.RenderTransform>
                    <Border.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                     From="0"
                                                     To="1"
                                                     Duration="{StaticResource StandardAnimationDuration}"
                                                     EasingFunction="{StaticResource StandardEaseOut}"/>
                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                     From="0.7"
                                                     To="1"
                                                     Duration="{StaticResource StandardAnimationDuration}"
                                                     EasingFunction="{StaticResource StandardEaseOut}"/>
                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                     From="0.7"
                                                     To="1"
                                                     Duration="{StaticResource StandardAnimationDuration}"
                                                     EasingFunction="{StaticResource StandardEaseOut}"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Border.Triggers>
                    <StackPanel>
                        <TextBlock Text="Gain Settings"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource LightTextPrimaryBrush}"
                                   Margin="0,0,0,20"/>
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="Minimum dB level:"
                                       Foreground="{DynamicResource LightTextPrimaryBrush}"
                                       Margin="0,0,10,0"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"/>
                            <Slider Grid.Column="1"
                                    x:Name="minDbLevelSlider"
                                    Style="{DynamicResource ModernSliderStyle}"
                                    Height="20"
                                    Minimum="-200"
                                    Maximum="0"
                                    Value="{Binding MinDbLevel, Mode=TwoWay}"
                                    VerticalAlignment="Center"
                                    ValueChanged="OnSliderValueChanged"/>
                            <TextBlock Grid.Column="2"
                                       Text="{Binding MinDbLevel, StringFormat='{}{0:F0}'}"
                                       Foreground="{DynamicResource LightTextPrimaryBrush}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Grid>
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="Maximum dB level:"
                                       Foreground="{DynamicResource LightTextPrimaryBrush}"
                                       Margin="0,0,10,0"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"/>
                            <Slider Grid.Column="1"
                                    x:Name="maxDbLevelSlider"
                                    Style="{DynamicResource ModernSliderStyle}"
                                    Height="20"
                                    Minimum="-100"
                                    Maximum="0"
                                    Value="{Binding MaxDbLevel, Mode=TwoWay}"
                                    VerticalAlignment="Center"
                                    ValueChanged="OnSliderValueChanged"/>
                            <TextBlock Grid.Column="2"
                                       Text="{Binding MaxDbLevel, StringFormat='{}{0:F0}'}"
                                       Foreground="{DynamicResource LightTextPrimaryBrush}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="Amplification factor:"
                                       Foreground="{DynamicResource LightTextPrimaryBrush}"
                                       Margin="0,0,10,0"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"/>
                            <Slider Grid.Column="1"
                                    x:Name="amplificationFactorSlider"
                                    Style="{DynamicResource ModernSliderStyle}"
                                    Height="20"
                                    Minimum="0.01"
                                    Maximum="5"
                                    Value="{Binding AmplificationFactor, Mode=TwoWay}"
                                    VerticalAlignment="Center"
                                    ValueChanged="OnSliderValueChanged"/>
                            <TextBlock Grid.Column="2"
                                       Text="{Binding AmplificationFactor, StringFormat='{}{0:F2}'}"
                                       Foreground="{DynamicResource LightTextPrimaryBrush}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </Popup>
        </Grid>
    </Border>
</Window>